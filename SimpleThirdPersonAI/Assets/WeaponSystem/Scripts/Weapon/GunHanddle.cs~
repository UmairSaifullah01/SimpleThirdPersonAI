using UnityEngine;
using System.Collections;
using GameAnalyticsSDK;

namespace HWRWeaponSystem
{
	
	public class GunHanddle : MonoBehaviour
	{
		private Animator playerAnim;
		public WeaponController weapon;
		public GameObject prisoner, gun, knife, knife_attack_btn, knifeEnable_btn;

		void Start ()
		{
			weapon = this.transform.GetComponentInChildren (typeof(WeaponController)).GetComponent<WeaponController> ();


		}

	

		public void Shoot_true ()
		{
			weapon.LaunchWeapon (0);
			prisoner.gameObject.GetComponent<Animator> ().SetBool ("is_shooting", true);
			Invoke ("Shoot_false", 2f);

//			knife_attack_btn.SetActive (false);
//			knifeEnable_btn.SetActive (true);

		}



		public void Shoot_false ()
		{
			prisoner.gameObject.GetComponent<Animator> ().SetBool ("is_shooting", false);
		}






	}


}
